const int pot = A0;  // Pin para el potenci贸metro
const int ldr = A1;   // Pin para el LDR

void setup() {
  Serial.begin(9600);  // Inicializa la comunicaci贸n serial
}

void loop() {
  int potValue = analogRead(pot);  // Lee el valor del potenci贸metro
  int ldrValue = analogRead(ldr);   // Lee el valor del LDR

  Serial.print("Potenci贸metro: ");
  Serial.print(potValue);
  Serial.print("   LDR: ");
  Serial.println(ldrValue);

  delay(1000);  // Espera 1 segundo antes de leer de nuevo
}
